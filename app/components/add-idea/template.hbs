<div class="center-block" style="width: 500px; padding: 30px 0">
  <div class="form-group">
    <label>Title</label>
    {{input name="title" class="form-control" value=title}}
  </div>

  <div class="form-group">
    <label class="control-label">Short description</label>
    {{input name="shortDescription" class="form-control" value=shortDescription}}
  </div>

  <div class="form-group">
    <label class="control-label">Description</label>
    {{textarea class="form-control" style="height: 100px;" name="description" value=description}}
  </div>

  <div class="form-group">
    <label class="control-label">Image url</label>
    {{input name="image" class="form-control" value=image}}
  </div>
  <div class="form-group">
    <label class="control-label">Kudo target</label>
    {{input name="target" class="form-control" type="number" value=target}}
  </div>

  <div class="flex-space-between">
    <a href="/ideas" class="btn button button--muted btn-lg">Cancel</a>
    <button {{action 'addIdea'}} type="submit" class="btn button btn-lg btn-block" style="margin-left: 20px;">
      Add
    </button>
  </div>
</div>
